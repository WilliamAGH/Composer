{
  "name": "Composer",
  "description": "AI email that drafts and manages your mailbox",
  "version": "0.1.2",
  "private": true,
  "homepage": "https://composerai.app",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:css & vite",
    "dev:css": "tailwindcss -i ./src/app.css -o ./src/generated/tailwind.css --content './src/**/*.{js,ts,svelte}' --watch",
    "build": "bun run build:css && vite build --emptyOutDir",
    "postbuild": "mkdir -p ../../src/main/resources/static/app/email-client/assets && cp ./src/generated/tailwind.css ../../src/main/resources/static/app/email-client/assets/tailwind.css",
    "build:css": "tailwindcss -i ./src/app.css -o ./src/generated/tailwind.css --content './src/**/*.{js,ts,svelte}'",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig tsconfig.json",
    "lint": "bun run check && oxlint src",
    "lint:fix": "oxlint --fix src",
    "lint:css": "stylelint '**/*.{css,svelte}'",
    "lint:css:fix": "stylelint '**/*.{css,svelte}' --fix",
    "lint:all": "bun run lint && bun run lint:css"
  },
  "dependencies": {
    "lucide-svelte": "^0.453.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^25.0.9",
    "autoprefixer": "^10.4.22",
    "oxlint": "^1.28.0",
    "picomatch": "^4.0.3",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "stylelint": "^16.25.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.1",
    "svelte": "^4.2.0",
    "svelte-check": "^4.3.4",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^5.0.0"
  }
}
